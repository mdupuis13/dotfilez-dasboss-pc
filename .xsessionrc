# copied, and edited, from ~/.profile
# used for graphical sessions

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022
/home/mdupuis/.screenlayout/md-default.layout.sh

# for qt5 apps ( needs qt5-style-plugins and libqt5svg5 )
export QT_QPA_PLATFORMTHEME=gtk2

# include sbin in PATH
if [ -d "/sbin" ] ; then
    PATH="/sbin:$PATH"
fi
if [ -d "/usr/sbin" ] ; then
    PATH="/usr/sbin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d ${HOME}/bin ] ; then
    PATH="${HOME}"/bin:"${PATH}"
fi

# set PATH so it includes snaps bin if it exists
if [ -d "/snap/bin" ] ; then
    PATH="$PATH:/snap/bin"
fi

# set keyboard media keys
xbindkeys_autostart &

# use redshift to shift colors at night
redshift-gtk &

# desktop locking program "daemon"
/usr/bin/light-locker &
